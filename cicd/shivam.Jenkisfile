pipeline {
  agent any
  triggers {
    // * * * * * //--> Every one minute
    // H/2 * * * * --> Every 2 minutes
    // MINUTE (0-59), HOUR (0-23), DAY (1-31), MONTH (1-12), DAY OF THE WEEK (0-6)
      pollSCM '30 14 * * *'  //-> at 14:30 every day 
     //pollSCM 'H/2 * * * *'
    //  pollSCM '* * * * *'
  }
  tools {
    maven 'maven-3.6.3' 
  }
  stages {
    stage ('Build') {
      steps {
        sh 'mvn clean package'
      }
    }
  }
}
